<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/medium_height"
        android:layout_marginStart="@dimen/spacing_narrow"
        android:layout_marginEnd="@dimen/spacing_narrow"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/transfer_audio_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/default_audio_name"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_narrow"
        android:layout_marginEnd="@dimen/spacing_narrow"
        android:orientation="vertical">

        <TextView
            android:id="@+id/cloud_transfer_text_label"
            android:layout_width="match_parent"
            android:layout_height="@dimen/small_height"
            android:gravity="fill_vertical"
            android:text="@string/cloud_transfer_text"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/cloud_transfer_text"
            android:layout_width="match_parent"
            android:layout_height="@dimen/cloud_transfer_text_display_height"
            android:background="@drawable/edit_bg_border_line"
            android:ems="10"
            android:gravity="start|top"
            android:inputType="textMultiLine" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/User_Modify_LinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_narrow"
        android:layout_marginEnd="@dimen/spacing_narrow"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_user_modify"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_normal"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:text="@string/transfer_text_user_modify"
            android:textAlignment="center"
            android:textColor="@color/app_background"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/User_Input_LinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/local_user_input_label"
            android:layout_width="match_parent"
            android:layout_height="@dimen/small_height"
            android:layout_marginStart="@dimen/spacing_narrow"
            android:layout_marginTop="@dimen/spacing_normal"
            android:layout_marginEnd="@dimen/spacing_narrow"
            android:gravity="fill_vertical"
            android:text="@string/local_user_input"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/local_user_input"
            android:layout_width="match_parent"
            android:layout_height="@dimen/cloud_transfer_text_display_height"
            android:layout_marginStart="@dimen/spacing_narrow"
            android:layout_marginEnd="@dimen/spacing_narrow"
            android:background="@drawable/edit_bg_border_line"
            android:ems="10"
            android:gravity="start|top"
            android:inputType="textMultiLine" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_narrow"
            android:layout_marginEnd="@dimen/spacing_narrow">

            <Button
                android:id="@+id/ibtn_cancel"
                android:layout_width="@dimen/local_user_input_btn_width"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="65dp"
                android:drawableStart="@drawable/ic_clear"
                android:text="@string/local_user_input_btn_cancel"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp" />

            <Button
                android:id="@+id/ibtn_save"
                android:layout_width="@dimen/local_user_input_btn_width"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="65dp"
                android:drawableStart="@drawable/ic_done"
                android:text="@string/local_user_input_btn_save"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp" />

        </RelativeLayout>
    </LinearLayout>
</LinearLayout>