<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="DialogEditText" parent="Widget.AppCompat.EditText">
        <item name="colorControlNormal">@color/dialog_edit_text_bottom_line</item>
        <item name="colorControlActivated">@color/dialog_edit_text_bottom_line</item>
    </style>
    <style name="btn_blue_background_style">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:height">@dimen/btn_small_size</item>
        <item name="android:background">@drawable/btn_blue_background</item>
    </style>

</resources>
